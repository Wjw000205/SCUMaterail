<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kdde.basemodule.basemodule.dao.ModuleDataDao">

    <!-- ✅ 动态插入通用SQL -->
    <insert id="insertDynamic" useGeneratedKeys="true" keyProperty="dataMap.id">
        INSERT INTO ${tableName}
        (
        <foreach collection="dataMap.keySet()" item="key" separator=",">
            `${key}`
        </foreach>
        )
        VALUES
        (
        <foreach collection="dataMap.values()" item="value" separator=",">
            #{value}
        </foreach>
        )
    </insert>


    <!-- ✅ 查询object表中是否存在指定sample_serial -->
    <select id="findIdBySampleSerial" parameterType="map" resultType="long">
        SELECT id FROM ${tableName} WHERE sample_serial = #{sampleSerial} LIMIT 1
    </select>

    <!-- ✅ 检查是否存在所有列都匹配的记录（operation/result） -->
    <select id="findMatchingRowId" parameterType="map" resultType="long">
        SELECT id FROM ${tableName}
        WHERE
        <trim prefixOverrides="AND">
            <foreach collection="dataMap" index="key" item="value">
                AND `${key}` = #{value}
            </foreach>
        </trim>
        LIMIT 1
    </select>

</mapper>